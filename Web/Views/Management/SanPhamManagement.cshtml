@{
    Layout = "~/Views/Shared/ManagementLayout.cshtml";
}
@model IEnumerable<Sanpham>
<table>
    <tr>
        <th>Tên sản phẩm</th>
        <th>Hãng sản xuất</th>
        <th>Số lượng</th>
        <th>Loại sản phẩm</th>
        <th>Mô tả</th>
        <th>Hình ảnh</th>
        <th>Thao tác</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Tensp</td>
            <td>@item.Hangsx</td>
            <td>@item.Soluong</td>
            <td>@item.Loaisp</td>
            <td>@item.Mota</td>
            <td><img src="~/img/@item.Hinhanh"></img></td>
            <td>
                <a asp-action="EditSanPham" asp-route-masp="@item.Masp" class="edit-button" style="color: black; background-color: yellow; text-decoration: none; margin-right: 10px;">Sửa</a>
                <a asp-action="DeleteSanPham" asp-route-masp="@item.Masp" class="delete-button" style="color: black; background-color: red; text-decoration: none;">Xóa</a>
            </td>
        </tr>
    }
</table>
<div class="create-area" >
    <a asp-action="CreateSanPham" class="create-button">Thêm mới sản phẩm</a>
</div>
<style>
    .create-area {
        color: black;
        border: none;
        cursor: pointer;
        padding: 10px 20px;
        margin: 5px;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }
    .create-button {
        color: black;
        background-color: lime;
        border: none;
        cursor: pointer;
        padding: 10px 20px;
        margin: 5px;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }
    
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    img {
        width: 50px;
        height: 50px;
    }
</style>