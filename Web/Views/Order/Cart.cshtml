@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@model IEnumerable<GH>
<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
          <div>
            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i
                  class="fas fa-angle-down mt-1"></i></a></p>
          </div>
        </div>
        <form asp-action="OrderSuccess" method="post" >
            @foreach(var m in Model){
            <div class="card rounded-3 mb-4">
              <div class="card-body p-4">
                <div class="row d-flex justify-content-between align-items-center">
                  <div class="col-md-2 col-lg-2 col-xl-2">
                    <img
                      src="~/img/@m.Hinhanh"
                      class="img-fluid rounded-3" alt="Cotton T-shirt">
                  </div>
                  
                  <div class="col-md-3 col-lg-3 col-xl-3">
                    <p class="lead fw-normal mb-2">@m.Tensp</p>
                    <p><span class="text-muted">Model: </span>@m.Loaisp</p>
                  </div>
              
                  <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                    <h5 class="mb-0" value="@m.Giaban">@m.Giaban đ</h5>
                  </div>
                  <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                    <a asp-action="DeleteCart" asp-route-magiohang="@m.IdGiohang" asp-route-masp="@m.Masp" asp-route-makh="@ViewBag.MaKH" class="text-danger">Delete</a>
                  </div>
                </div>
              </div>
            </div>
                        <input type="hidden" name="items.Index" value="@Model.ToList().IndexOf(m)" />
                        <input type="hidden" name="items[@Model.ToList().IndexOf(m)].IdGiohang" value="@m.IdGiohang" />
                        <input type="hidden" name="items[@Model.ToList().IndexOf(m)].Masp" value="@m.Masp" />
                        <input type="hidden" name="items[@Model.ToList().IndexOf(m)].Tensp" value="@m.Tensp" />
                        <input type="hidden" name="items[@Model.ToList().IndexOf(m)].Loaisp" value="@m.Loaisp" />
                        <input type="hidden" name="items[@Model.ToList().IndexOf(m)].Giaban" value="@m.Giaban" />
                        <input type="hidden" name="items[@Model.ToList().IndexOf(m)].Hinhanh" value="@m.Hinhanh" />
                        
        }
        
            <input type="hidden" name="makhachhang" value="@ViewBag.MaKH" />
            <div class="card mb-4">
              <div class="card-body p-4 d-flex flex-row">
                <div data-mdb-input-init class="form-outline flex-fill">
                  <input type="text" id="form1" class="form-control form-control-lg" />
                  <label class="form-label" for="form1">Discound code</label>
                </div>
                <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-warning btn-lg ms-3">Apply</button>
              </div>
            </div>
        
            <div class="card">
              <div class="card-body">
                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-block btn-lg">Proceed to Pay</button>
              </div>
            </div>
       </form>
      </div>
    </div>
  </div>
</section>
